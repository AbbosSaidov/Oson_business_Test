<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <include layout="@layout/action_bar"
    />

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:layout_marginTop="56dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_collapseMode="pin">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="36dp"
                android:paddingRight="36dp">

            <android.support.v7.widget.AppCompatImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:src="@mipmap/icon_logo"/>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_registration_company_name_textinputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="3dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activity_registration_company_name_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:maxLines="1"
                        android:inputType="textNoSuggestions"
                        android:hint="@string/activity_registration_input_company_name_hint"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_registration_settlement_account_textinputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activity_registration_settlement_account_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:maxLines="1"
                        android:inputType="number"
                        android:hint="@string/activity_registration_input_settlement_account_hint"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_registration_vatin_textinputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activity_registration_vatin_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:maxLines="1"
                        android:inputType="number"
                        android:hint="@string/activity_registration_input_vatin_hint"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_registration_login_textinputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activity_registration_login_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:maxLines="1"
                        android:inputType="textNoSuggestions"
                        android:hint="@string/activity_registration_input_login_hint"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_registration_password_textinputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    app:passwordToggleEnabled="true"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activity_registration_password_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi|actionNext"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:hint="@string/activity_registration_input_password_hint"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                    android:id="@+id/activity_registration_confirm_password_textinputlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    app:passwordToggleEnabled="false"
                    app:hintAnimationEnabled="true"
                    app:hintEnabled="true">

                <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/activity_registration_confirm_password_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="flagNoExtractUi|actionDone"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:hint="@string/activity_registration_input_confirm_password_hint"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.v7.widget.AppCompatButton
                    android:id="@+id/activity_registration_continue_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorWhite"
                    android:text="@string/activity_registration_continue_button_hint"
                    style="@style/Ui.Button" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>