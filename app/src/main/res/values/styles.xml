<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Ui.Button" parent="Base.Widget.AppCompat.Button">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/roundshapbtn</item>
        <item name="fontFamily">@font/lato</item>
    </style>
    <style name="Divider">
        <item name="android:background">@color/design_default_color_primary_dark</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>

    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <style name="Ui.Button.ColorPrimary" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:background">@drawable/roundshapbtn</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Ui.Button.ColorPrimaryDark" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
        <item name="android:background">@drawable/roundshapbtn</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Ui.Button.ColorBackgroundTinted" parent="Base.Widget.AppCompat.Button.Colored"/>

    <style name="Ui.Button.Transparent" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textSize">15sp</item>        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:background">@drawable/roundshapbtn</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Ui.Button.Transparent.ColorPrimary" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textSize">15sp</item>        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:background">@drawable/roundshapbtn</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Ui.Button.Transparent.ColorPrimaryDark" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textSize">15sp</item>        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:background">@drawable/roundshapbtn</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="Ui.Button.Transparent.ColorTextTinted" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog"/>

    <style name="Ui.ImageButton" parent="Base.Widget.AppCompat.ImageButton"/>

    <style name="Ui.ImageButton.Transparent" parent="Base.Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:padding">10dp</item>
        <item name="android:layout_height">48sp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="android:background">@drawable/roundshapbtn</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="fontFamily">@font/lato</item>
    </style>


</resources>
